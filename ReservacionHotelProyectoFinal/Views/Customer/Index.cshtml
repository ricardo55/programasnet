@model IEnumerable<ReservacionHotelExamen2.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Cliente</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerForenames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerSurnames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerDOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerAdressStreet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerAdressTown)
