@model IEnumerable<ReservacionHotelExamen2.Models.FacilitieList>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Facilidades</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FacilityDesc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FacilityDesc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FacilitieListID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FacilitieListID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FacilitieListID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
