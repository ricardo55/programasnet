@model IEnumerable<ReservacionHotelExamen2.Models.PaymentMethod>

@{
    ViewData["Title"] = "Index";
}

<h1>Metodo de pago</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaymentMethodDesc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethodDesc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PaymentMethodID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PaymentMethodID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PaymentMethodID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
